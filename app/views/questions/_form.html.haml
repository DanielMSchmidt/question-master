= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content

  .field
    = f.label :answer
    = f.text_area :answer

  .field
    = f.label :tex
    = f.check_box :tex

    = f.hidden_field :subject_id
  .actions
    = f.submit 'Save'

%script=raw("$('#question_subject_id').val('#{params[:subject]}')")